{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:integration": "jest --config ./jest.integration.config.js --runInBand",
    "test:integration:full": "node scripts/run-integration-tests.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:check": "eslint . --ext ts,tsx --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json,md}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,css,json,md}\" --ignore-path .prettierignore",
    "quality": "npm run lint && npm run format:check && npm run typecheck",
    "quality:fix": "npm run lint:fix && npm run format",
    "typecheck": "tsc --noEmit",
    "lighthouse": "lighthouse http://localhost:3000 --quiet --enable-error-reporting=false --chrome-flags=\"--headless --no-sandbox --disable-gpu\" --output=json --output-path=./lighthouse-report.json",
    "lighthouse:production": "lighthouse http://localhost:4173 --quiet --enable-error-reporting=false --chrome-flags=\"--headless --no-sandbox --disable-gpu\" --output=json --output-path=./lighthouse-report.json",
    "lighthouse:visualize": "node scripts/visualize-lighthouse.mjs",
    "lighthouse:production": "node scripts/test-production-performance.mjs",
    "analyze:bundle": "node scripts/analyze-bundle.mjs",
    "userguide": "node scripts/userguide.mjs",
    "clean": "rm -rf dist node_modules/.cache",
    "sonar:scan": "sonar-scanner -Dproject.settings=sonar-project.properties"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^15.11.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "lighthouse": "^12.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.31.0",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}


